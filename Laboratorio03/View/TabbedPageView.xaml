<?xml version="1.0" encoding="UTF-8"?>
<TabbedPage xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="Laboratorio03.View.TabbedPageView" Title="TabbedPage">
    <ContentPage Title="Tab 1" HeightRequest="40">
        <ContentPage.Content>
            <StackLayout>
                <ListView x:Name = "lstvCatalogo"
                    ItemsSource = "{Binding Catalogo}">
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <ViewCell>
                                <StackLayout Orientation="Horizontal">
                                    <Label Text="{Binding Title}" HorizontalOptions="Start" VerticalOptions="Center" />
                                </StackLayout>                    
                            </ViewCell>
                        </DataTemplate>
                    </ListView.ItemTemplate>               
                </ListView>
            </StackLayout>
        </ContentPage.Content>
    </ContentPage>
    <ContentPage Title="Tab 2" >
        <ContentPage.Content>
            <StackLayout>
            </StackLayout>
        </ContentPage.Content>
    </ContentPage>
    <ContentPage Title="Tab 3">
        <ContentPage.Content>
            <StackLayout>
            </StackLayout>
        </ContentPage.Content>
    </ContentPage>
</TabbedPage>